  "devDependencies": {
    "@golevelup/ts-jest": "^0.6.1",
    "@itddd/eslint-config": "workspace:*",
    "@itddd/typescript-config": "workspace:*",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "esbuild": "^0.25.5",
    "eslint": "^9.16.0",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.1",
